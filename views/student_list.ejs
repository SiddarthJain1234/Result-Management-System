<style>
    th,td{
        text-align: center;
    }
 
    .colored-background {
    background-color: #e1eddb;
  }

  .center{
      margin-left: 40%;
      margin-right: 50%;
  }
  .buttons{
      padding-left: 19px;
      padding-right: 19px;
  }
    </style>



    <div >
        <a href="/teacher/addrecord">
        <button style="margin-left: 85%; margin-top: 1%;" type="button" class="btn btn-primary btn-lg">Add Record</button>
        </a>        
    <div>


<div style="margin:3%;">
        <table class="table table-bordered">
            <thead>
                <tr>
                  <th scope="col">RollNo</th>
                  <th scope="col">Name</th>
                  <th scope="col">DOB</th>
                  <th scope="col">Score</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
               
                <%for(let i=1; i<=sts.length; i++){ %>
                  <tr>
                    <th scope="row"><%=sts[i-1].rollno%></th>
                    <td><%=sts[i-1].name%></td>
                    <td><%=sts[i-1].dob.toISOString().substring(0,10)%></td>
                    <td><%=sts[i-1].score%></td>
                    <td>
                      <a href="/teacher/edit/<%=sts[i-1]._id%>">
                        <button type="button" class="btn btn-primary">Edit</button>
                      </a>
                      <a href="/teacher/delete/<%=sts[i-1]._id%>">
                        <button type="button" class="btn btn-danger">Delete</button>
                      </a>  
                      </td>
                  </tr>
                 <% }%> 
              </tbody>
        </table> 
    </div>